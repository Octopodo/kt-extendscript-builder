{
    "compilerOptions": {
        "target": "ES2018",
        "module": "CommonJS",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*", "src/tsconfigs/tsconfig.es3.json"],
    "exclude": ["node_modules", "dist"]
}
